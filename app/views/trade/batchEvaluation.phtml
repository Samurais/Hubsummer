    var date1=new Date();
    var s1=date1.getTime();
    ms=s1-s2;
    h=Math.floor(ms/(3600*1000*24));
    /*m=Math.floor((ms-h*3600*1000*24)/(3600*1000));
    s=Math.floor((ms-h*3600*1000*24-m*3600*1000)/60000);*/
